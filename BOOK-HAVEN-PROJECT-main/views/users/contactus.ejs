<% layout('/layouts/boilerplate') %>
<h1 class="text-center my-4">Contact Us</h1>

<div class="container">
    <div class="row">
        <!-- Contact Form Section -->
        <div class="col-md-6">
            <h3>Get in Touch</h3>
            <p>If you have any questions, feedback, or just want to say hello, feel free to contact us using the form below:</p>

            <form>
                <div class="mb-3">
                    <label for="name" class="form-label">Full Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter your name">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email Address</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter your email">
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea class="form-control" id="message" rows="4" placeholder="Your message"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

        <!-- Office Location Section -->
        <div class="col-md-6">
            <h3>Our Office Location</h3>
            <p>We’re located at the heart of the city! Feel free to visit us anytime during working hours:</p>
            <ul>
                <li><strong>Address:</strong> 123 Book Haven St., City, Country</li>
                <li><strong>Phone:</strong> +1 234 567 890</li>
                <li><strong>Email:</strong> contact@bookhaven.com</li>
            </ul>
        </div>
    </div>

    <hr>

    <div class="text-center mt-4">
        <h4>Connect With Us</h4>
        <p>Follow us on social media for the latest updates, book recommendations, and more!</p>
        <div class="d-flex justify-content-center">
            <a href="#" class="mx-2"><i class="fa-brands fa-facebook fa-2x"></i></a>
            <a href="#" class="mx-2"><i class="fa-brands fa-twitter fa-2x"></i></a>
            <a href="#" class="mx-2"><i class="fa-brands fa-instagram fa-2x"></i></a>
            <a href="#" class="mx-2"><i class="fa-brands fa-linkedin fa-2x"></i></a>
        </div>
    </div>
</div>

<div class="text-center mt-5">
    <p>© <strong>Book Haven Private Limited</strong></p>
</div>
